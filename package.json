    "@types/node": "^17.0.12",
    "@types/response-time": "^2.3.5",
    "@types/sinon": "^10.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cz-conventional-changelog": "^3.3.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.31.0",
    "jest": "^27.4.7",
    "jest-mock-extended": "^2.0.4",
    "jest-serial-runner": "^1.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
