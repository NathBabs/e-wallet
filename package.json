{
  "name": "forus-wallet",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx rimraf build && npx tsc",
    "dev": "npm run build && concurrently \"npx tsc --watch\" \"nodemon --es-module-specifier-resolution=node -q build/src/server.js\"",
    "start:prod": "npx prisma generate && npx prisma migrate deploy && node build/src/server.js",
    "start": "docker-compose --profile prod up",
    "stop": "docker-compose --profile prod down",
    "docker:test:up": "docker-compose --profile test up -d",
    "docker:test:down": "docker-compose --profile test down",
    "test": "npm run docker:test:up & dotenv -e ./.env.test npx prisma migrate deploy & dotenv -e ./.env.test jest user.spec.ts --watch --detectOpenHandles & dotenv -e ./.env.test jest account.spec.ts --watch --detectOpenHandles",
    "alone:test": "dotenv -e ./.env.test jest user.spec.ts --watch --detectOpenHandles & dotenv -e ./.env.test jest account.spec.ts --watch --detectOpenHandles",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "author": "Nathaniel Babalola",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@prisma/client": "^3.8.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/morgan": "^1.9.3",
    "@types/yup": "^0.29.13",
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.6.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "currency.js": "^2.0.4",
    "dayjs": "^1.10.7",
    "dotenv": "^14.3.2",
    "dotenv-cli": "^4.1.1",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "nanoid": "^3.2.0",
    "pino": "^7.6.4",
    "pino-pretty": "^10.0.0",
    "prom-client": "^14.0.1",
    "response-time": "^2.3.2",
    "rimraf": "^3.0.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
